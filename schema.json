{
  "$ref": "#/definitions/FledgeConfigSchema",
  "definitions": {
    "FledgeConfigSchema": {
      "type": "object",
      "properties": {
        "stacks": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "id": {
                "type": "string",
                "minLength": 1
              },
              "name": {
                "type": "string",
                "minLength": 1
              },
              "description": {
                "type": "string",
                "minLength": 1
              },
              "path": {
                "type": "string",
                "minLength": 1
              },
              "ignore": {
                "type": "array",
                "items": {
                  "type": "string"
                },
                "default": [
                  "**/.DS_Store",
                  "**/node_modules/**/*",
                  "**/.git/**/*",
                  "**/package-lock.json",
                  "**/yarn.lock",
                  "**/.env"
                ]
              },
              "preconditions": {
                "type": "array",
                "items": {
                  "anyOf": [
                    {
                      "type": "string"
                    },
                    {
                      "type": "object",
                      "properties": {
                        "sh": {
                          "type": "string",
                          "minLength": 1
                        },
                        "message": {
                          "type": "string",
                          "minLength": 1
                        }
                      },
                      "required": ["sh"],
                      "additionalProperties": false
                    }
                  ]
                },
                "default": []
              },
              "secrets": {
                "type": "array",
                "items": {
                  "type": "object",
                  "properties": {
                    "name": {
                      "type": "string",
                      "minLength": 1
                    },
                    "hint": {
                      "type": "string",
                      "minLength": 1
                    }
                  },
                  "required": ["name"],
                  "additionalProperties": false
                },
                "default": []
              },
              "postSetupCommands": {
                "type": "array",
                "items": {
                  "type": "string"
                },
                "default": []
              },
              "postSetupInstructions": {
                "type": "array",
                "items": {
                  "type": "string"
                },
                "default": []
              }
            },
            "required": ["id", "name", "description", "path"],
            "additionalProperties": false
          },
          "minItems": 1
        }
      },
      "required": ["stacks"],
      "additionalProperties": false
    }
  },
  "$schema": "http://json-schema.org/draft-07/schema#"
}
