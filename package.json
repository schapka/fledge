{
  "name": "fledge",
  "version": "1.0.0",
  "type": "module",
  "private": true,
  "sideEffects": false,
  "packageManager": "pnpm@9.7.0",
  "engines": {
    "node": ">=20.0.0"
  },
  "scripts": {
    "docs:dev": "pnpm --filter=./fledge-docs run dev",
    "build": "pnpm -r run build",
    "type-check": "pnpm -r run type-check",
    "lint": "pnpm -r run lint",
    "test": "pnpm -r test",
    "prepare": "husky || true"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.6.1",
    "@commitlint/config-conventional": "^19.6.0",
    "@types/node": "^22.10.2",
    "husky": "^9.1.7",
    "typescript": "^5.7.2"
  },
  "lint-staged": {
    "*.{cjs,js,mjs,ts,vue}": [
      "pnpm -r run lint"
    ]
  }
}
